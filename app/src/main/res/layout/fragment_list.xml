<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListFragment"
    android:background="@color/cardview_dark_background">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="398dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- First Note Title -->
        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="List Title:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- First Note Text -->
        <TextView
            android:id="@+id/note_text"
            android:layout_width="177dp"
            android:layout_height="39dp"
            android:layout_below="@+id/list_title"
            android:layout_alignParentStart="true"
            android:text="This is the first list text."
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="130dp"
        android:layout_width="398dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- Second Note Title -->
        <TextView
            android:id="@+id/list_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="List Title:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- First Note Text -->
        <TextView
            android:id="@+id/note_text1"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_title1"
            android:layout_alignBottom="@+id/list_title1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="-40dp"
            android:text="This is the second list text."
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="240dp"
        android:layout_width="398dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- Second Note Title -->
        <TextView
            android:id="@+id/list_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="List Title:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- First Note Text -->
        <TextView
            android:id="@+id/List_text2"
            android:layout_width="215dp"
            android:layout_height="36dp"
            android:layout_below="@+id/list_title2"
            android:layout_alignBottom="@+id/list_title2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="167dp"
            android:layout_marginBottom="-36dp"
            android:text="This is the third list text."
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>